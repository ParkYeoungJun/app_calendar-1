<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:background="#B2CCFF"
	android:gravity="center"
	android:layout_width="wrap_content"
	android:layout_height="wrap_content"
	>
	<RelativeLayout
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:padding="5dp"
		android:layout_centerInParent="true"
		android:background="#B2CCFF"
		>

		<LinearLayout
			android:id="@+id/contentsLayout"
			android:orientation="vertical"
			android:layout_width="260dp"
			android:layout_height="wrap_content"
			android:layout_alignParentTop="true"
			android:layout_margin="4dp"
			>

			<TextView
				android:textColor="#FFFFFF"
				android:text="일정 수정"
				android:gravity="center"
				android:textSize="22dp"
				android:layout_marginBottom="10dp"
				android:layout_width="fill_parent"
				android:layout_height="wrap_content" />

			<ImageView
				android:layout_marginBottom="5dp"
				android:background="@drawable/blank"
				android:layout_width="fill_parent"
				android:layout_height="2dp" />


			<LinearLayout
				android:orientation="horizontal"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_margin="4dp"
				>
				<ImageView
					android:layout_marginRight="10dp"
					android:id="@+id/u_imageList"
					android:background="@drawable/list2"
					android:layout_width="45dp"
					android:layout_height="45dp" />

				<!--
				<TextView
					android:id="@+id/messageLabel"
					android:text="  일정  "
					android:textColor="#CFCFCF"
					android:textSize="18dp"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					/> -->

				<EditText
					android:id="@+id/u_messageInput"
					android:layout_width="180dp"
					android:layout_height="wrap_content"
					android:layout_alignBaseline="@id/u_imageList"
					android:inputType="text"
					/>

			</LinearLayout>
			<LinearLayout
				android:orientation="horizontal"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_margin="4dp"
				>
				<ImageView
					android:id="@+id/u_imageClock"
					android:layout_marginRight="10dp"
					android:background="@drawable/clock2"
					android:layout_width="45dp"
					android:layout_height="45dp" />
				<!--
				<TextView
					android:id="@+id/birthLabel1"
					android:text="  시간  "
					android:textColor="#CFCFCF"
					android:textSize="18dp"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content" -->
				/>
				<Button
					android:layout_alignBaseline="@id/u_imageClock"
					android:background="#FFFFFF"
					android:id="@+id/u_timeButton"
					android:layout_width="180dp"
					android:layout_height="40dp"

					/>
			</LinearLayout>

		</LinearLayout>
		<LinearLayout
			android:orientation="horizontal"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_below="@+id/contentsLayout"
			android:layout_centerHorizontal="true"
			android:layout_marginTop="20dp"
			>

			<Button
				android:background="#FFFFFF"
				android:id="@+id/u_saveButton"
				android:layout_width="130dp"
				android:layout_height="25dp"
				android:text="저 장"
				android:textSize="16dp"
				/>
			<Button
				android:background="#FFFFFF"
				android:id="@+id/u_closeButton"
				android:layout_width="130dp"
				android:layout_height="25dp"
				android:layout_marginLeft="10dp"
				android:text="닫 기"
				android:textSize="16dp"
				/>
		</LinearLayout>
	</RelativeLayout>
</RelativeLayout>
